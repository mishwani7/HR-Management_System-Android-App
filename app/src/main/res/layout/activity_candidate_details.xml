<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CandidateDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fifteen"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/ten"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save"
                style="@style/fillButtons"
                android:layout_marginEnd="@dimen/ten"
                android:text="@string/save_details" />

            <Button
                android:id="@+id/reset"
                style="@style/whiteButtons"
                android:text="@string/reset" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageDetail"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/twenty"
            android:src="@drawable/employee_tie" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@android:color/darker_gray">

                <TextView
                    style="@style/tableParam"
                    android:text="@string/name_star" />

                <EditText
                    android:id="@+id/nameDetail"
                    style="@style/tableValue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@android:color/darker_gray">

                <TextView
                    style="@style/tableParam"
                    android:text="@string/phone_star" />

                <EditText
                    android:id="@+id/phoneDetail"
                    style="@style/tableValue"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@android:color/darker_gray">

                <TextView
                    style="@style/tableParam"
                    android:text="@string/position_star" />

                <EditText
                    android:id="@+id/positionDetail"
                    style="@style/tableValue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@android:color/darker_gray">

                <TextView
                    style="@style/tableParam"
                    android:text="@string/status_star" />

                <Spinner
                    android:id="@+id/statusDetail"
                    style="@style/tableValue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@android:color/darker_gray">

                <TextView
                    style="@style/tableParam"
                    android:layout_weight="1"
                    android:text="@string/resume" />

                <TextView
                    android:id="@+id/resumeDetail"
                    style="@style/tableValue"
                    android:layout_weight="1"
                    android:text="@string/view"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/change"
                    style="@style/tableValue"
                    android:layout_weight="1"
                    android:text="@string/upload"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten"
            android:fontFamily="@font/gothici"
            android:padding="@dimen/twenty"
            android:text="@string/hint_below_table"
            android:textAlignment="textEnd" />
    </LinearLayout>
</ScrollView>